<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.tpcreative.supersafe">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name=".common.services.SuperSafeApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme.Base">
        <activity
            android:name=".ui.splashscreen.SplashScreenActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <receiver android:name=".common.services.SuperSafeReceiver">
            <intent-filter>
                <action android:name="android.intent.action.SCREEN_OFF" />
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <!-- Upload Google Drive -->

        <service android:name=".common.services.SuperSafeService" />

        <!-- Enter pin code -->
        <activity
            android:name=".ui.lockscreen.EnterPinActivity"
            android:label="@string/key_change" />
        <activity
            android:name=".ui.main_tab.MainTabActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.signin.SignInActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.verify.VerifyActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.askpermission.AskPermissionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.dashboard.DashBoardActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".ui.signup.SignUpActivity" />
        <activity
            android:name=".ui.camera.CameraActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.darsh.multipleimageselect.activities.AlbumSelectActivity">
            <intent-filter>
                <category android:name="ANDROID.INTENT.CATEGORY.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.albumdetail.AlbumDetailActivity"
            android:label=""
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity android:name=".ui.photosslideshow.PhotoSlideShowActivity" />
        <activity
            android:name=".ui.settings.SettingsActivity"
            android:label="@string/settings"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity
            android:name=".ui.help.HelpActivity"
            android:label="@string/help"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.verifyaccount.VerifyAccountActivity"
            android:label="@string/verify"
            android:theme="@style/Theme.Slidr.Slidable"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity
            android:name=".ui.accountmanager.AccountManagerActivity"
            android:label="@string/account"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity
            android:name=".ui.enablecloud.EnableCloudActivity"
            android:label="@string/enable_cloud_sync" />
        <activity
            android:name=".ui.cloudmanager.CloudManagerActivity"
            android:label="@string/cloud_manager"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity android:name=".ui.checksystem.CheckSystemActivity" />
        <activity android:name=".ui.player.PlayerActivity" />
        <activity
            android:name=".ui.trash.TrashActivity"
            android:label="@string/key_trash"
            android:theme="@style/Theme.Slidr.Slidable" />
        <activity
            android:name=".ui.settings.AlbumSettingsActivity"
            android:theme="@style/Theme.Slidr.Slidable" />

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="15db64b7a0d9e4cba1e5852f23b0305152060773" />

        <activity android:name=".ui.resetpin.ResetPinActivity"
            android:label="@string/reset_pin"
            android:screenOrientation="portrait"></activity>

    </application>
</manifest>