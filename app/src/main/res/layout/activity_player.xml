<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.player.PlayerActivity">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.exoplayer2.ui.PlayerView
            app:shutter_background_color="@color/yellow_700"
            app:show_buffering="true"
            android:layout_alignParentBottom="true"
            android:id="@+id/simpleexoplayerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <dyanamitechetan.vusikview.VusikView
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:id="@+id/animationPlayer"
            android:layout_height="match_parent"
            app:fallCount="40"
            app:fallSpeed="0.1"/>

        <RelativeLayout
            android:background="#9F000000"
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgArrowBack"
                android:layout_marginLeft="7dp"
                android:padding="7dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_arrow_back_white_36"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"/>

            <TextView
                android:singleLine="true"
                android:layout_centerInParent="true"
                android:layout_toRightOf="@id/imgArrowBack"
                android:layout_toLeftOf="@+id/imgRotate"
                android:gravity="left"
                android:paddingRight="20dp"
                android:paddingLeft="20dp"
                android:textSize="@dimen/abc_text_size_title_material"
                android:textColor="?attr/colorAccent"
                android:id="@+id/tvTitle"
                android:layout_marginBottom="100dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:id="@+id/imgRotate"
                    android:padding="7dp"
                    android:src="@drawable/baseline_rotate_right_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_marginBottom="100dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v7.widget.RecyclerView>
        </RelativeLayout>

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>