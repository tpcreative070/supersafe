<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:fillViewport="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:maxWidth="@dimen/layout_maxwidth"
        android:padding="@dimen/layout_padding">


        <RelativeLayout
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:layout_centerInParent="true"
            android:layout_alignParentTop="true"
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:gravity="center"
            android:text="@string/pinlock_title"
            android:textColor="@color/text_title"
            android:textSize="@dimen/textsize_title"/>


        <co.tpcreative.keepsafety.ui.lockscreen.IndicatorDots
            android:layout_centerInParent="true"
            android:layout_below="@+id/title"
            android:id="@+id/indicator_dots"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"/>

        <RelativeLayout
            android:layout_marginTop="15dp"
            android:onClick="onDelete"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/title"
            android:layout_width="@dimen/default_button_size"
            android:layout_height="@dimen/default_button_size">
            <ImageView
                android:layout_centerInParent="true"
                android:src="@drawable/ic_backspace"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </RelativeLayout>


        <TextView
            android:layout_centerInParent="true"
            android:layout_below="@id/indicator_dots"
            android:id="@+id/attempts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/attempts_margintop"
            android:layout_marginBottom="@dimen/attempts_marginbottom"
            android:textColor="@color/text_attempts"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/indicator_dots" />


        <RelativeLayout
            android:layout_below="@id/attempts"
            android:layout_margin="@dimen/lockview_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <co.tpcreative.keepsafety.ui.lockscreen.PinLockView
                android:layout_centerInParent="true"
                android:id="@+id/pinlockView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/lockview_margin"/>
        </RelativeLayout>
        </RelativeLayout>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
