<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/root"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:layout_collapseMode="pin" />
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimary"
            app:expandedTitleMarginStart="48dp"
            app:expandedTitleMarginEnd="64dp">
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/rlAttempt"
        android:background="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.github.kratorius.circleprogress.CircleProgressView
            app:circleProgressColor="#ffff8800"
            android:layout_centerInParent="true"
            android:id="@+id/crc_standard"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:circleProgressText="40"
            app:circleProgressTextSize="@dimen/icon_size_60"
            app:circleProgressTextColor="@color/white"
            app:circleProgressValue="100"/>
        <TextView
            android:textSize="@dimen/text_size_normal"
            android:textColor="@color/material_gray_200"
            android:layout_marginTop="20dp"
            android:id="@+id/tvAttempt"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/crc_standard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:background="?attr/colorPrimary"
        android:id="@+id/rlLockScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:visibility="invisible"
                android:layout_gravity="center"
                android:id="@+id/llForgotPin"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_marginRight="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:text="@string/key_forgot_pin"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_help_outline_white_48"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size" />
            </LinearLayout>
            <ImageView
                android:visibility="gone"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:id="@+id/imgSwitchTypeUnClock"
                android:src="@drawable/baseline_dialpad_white_48"
                android:layout_width="@dimen/image_size_custom_40"
                android:layout_height="@dimen/image_size_custom_40"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/llLockScreen_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="80dp">
                <ImageView
                    android:id="@+id/imgLauncher"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_launcher"
                    android:visibility="invisible" />
                <TextView
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:textStyle="bold"
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/pinlock_title"
                    android:textColor="@color/text_title"
                    android:textSize="@dimen/textsize_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlDots"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp">
                <co.tpcreative.supersafe.ui.lockscreen.IndicatorDots
                    android:paddingRight="20dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/indicator_dots"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"/>
                <RelativeLayout
                    android:layout_width="@dimen/default_button_size"
                    android:layout_height="@dimen/default_button_size"
                    android:layout_alignParentRight="true"
                    android:onClick="onDelete">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_backspace" />
                </RelativeLayout>
            </RelativeLayout>
            <TextView
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:id="@+id/attempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/attempts_marginbottom"
                android:layout_marginTop="@dimen/attempts_margintop"
                android:textColor="@color/text_attempts" />
            <RelativeLayout
                android:id="@+id/rlButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="0dp">
                <co.tpcreative.supersafe.ui.lockscreen.PinLockView
                    android:id="@+id/pinlockView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="@dimen/lockview_margin"
                    android:scrollbars="none" />
                <ImageView
                    android:visibility="gone"
                    android:src="@drawable/baseline_fingerprint_white_48"
                    android:id="@+id/imgFingerprint"
                    android:layout_centerInParent="true"
                    android:layout_width="@dimen/icon_size_60"
                    android:layout_height="@dimen/icon_size_60" />
            </RelativeLayout>
        </LinearLayout>
        <include
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent" layout="@layout/footer_layout"/>
        <include
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/include_calculator"/>
    </RelativeLayout>
    <RelativeLayout
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:background="@color/white"
        android:visibility="invisible"
        android:id="@+id/rlPreference"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <FrameLayout
            android:id="@+id/content_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>