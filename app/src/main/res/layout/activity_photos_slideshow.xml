<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".ui.photosslideshow.PhotoSlideShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <co.tpcreative.suppersafe.common.views.HackyViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:background="#7F000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/baseline_share_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/baseline_launch_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />


            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/baseline_input_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/baseline_rotate_right_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />

            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:padding="5dp"
                    android:src="@drawable/baseline_delete_sweep_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>