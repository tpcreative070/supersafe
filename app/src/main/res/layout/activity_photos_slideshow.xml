<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDark"
    tools:context=".ui.photosslideshow.PhotoSlideShowActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">



        <co.tpcreative.suppersafe.common.views.HackyViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


        <RelativeLayout
            android:background="#7F000000"
            android:id="@+id/rlTop"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:id="@+id/imgArrowBack"
                android:layout_marginLeft="7dp"
                android:padding="7dp"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_arrow_back_white_36"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"/>

            <TextView
                android:layout_toRightOf="@+id/imgArrowBack"
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/imgOverflow"
                android:padding="7dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/baseline_more_vert_white_36"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size"/>

        </RelativeLayout>


        <LinearLayout
            android:id="@+id/llBottom"
            android:background="#7F000000"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_centerInParent="true"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgShare"
                    android:padding="7dp"
                    android:src="@drawable/baseline_share_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgExport"
                    android:padding="7dp"
                    android:src="@drawable/baseline_launch_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgMove"
                    android:padding="7dp"
                    android:src="@drawable/baseline_input_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />
            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imgRotate"
                    android:padding="7dp"
                    android:src="@drawable/baseline_rotate_right_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />

            </LinearLayout>
            <LinearLayout
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/imgDelete"
                    android:padding="7dp"
                    android:src="@drawable/baseline_delete_sweep_white_36"
                    android:layout_gravity="center"
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>