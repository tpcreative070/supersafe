<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/material_gray_100"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/nsv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/white">

                            <ImageView
                                android:layout_alignParentTop="true"
                                android:layout_centerInParent="true"
                                android:id="@+id/imgPro"
                                android:layout_width="@dimen/image_size_custom"
                                android:layout_height="@dimen/image_size_custom"
                                android:layout_gravity="left|center"
                                android:src="@drawable/baseline_stars_white_48"
                                android:tint="@color/holo_blue_dark" />

                            <TextView
                                android:textStyle="bold"
                                android:textSize="@dimen/text_size_large"
                                android:layout_marginTop="10dp"
                                android:id="@+id/tvPremiumLeft"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/imgPro"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:gravity="left|center"
                                android:text="@string/premium_left"
                                android:textColor="@color/colorButton" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>


                <!--User info -->


                <RelativeLayout
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp">
                        <ImageView
                            android:padding="3dp"
                            android:layout_width="@dimen/icon_size_30"
                            android:layout_height="@dimen/icon_size_30"
                            android:layout_gravity="center"
                            android:src="@drawable/baseline_account_circle_white_36"
                            android:tint="?attr/colorPrimary" />

                        <LinearLayout
                            android:layout_marginLeft="10dp"
                            android:id="@+id/llAccount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvEmail"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tpcreative"
                                android:textSize="@dimen/text_size_large" />

                            <TextView
                                android:id="@+id/tvStatus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:text="@string/verify_change"
                                android:textColor="@color/colorAccent"
                                android:textSize="@dimen/text_size_large" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>



                <!--Cloud And Local-->


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/llCloudLocal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/llEnableCloud"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llAccount"
                            android:orientation="horizontal">
                            <ImageView
                                android:layout_width="@dimen/icon_size_30"
                                android:layout_height="@dimen/icon_size_30"
                                android:layout_gravity="center"
                                android:src="@drawable/ic_drive_cloud"
                                android:tint="?attr/colorPrimary" />


                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="left|center"
                                    android:text="@string/cloud"
                                    android:textSize="@dimen/text_size_large" />

                                <TextView
                                    android:layout_marginLeft="10dp"
                                    android:id="@+id/tvEnableCloud"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/enable_cloud_sync"
                                    android:textColor="@color/colorButton"
                                    android:textSize="@dimen/text_size_normal" />
                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/llAboutLocal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/llEnableCloud"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal">

                            <ImageView
                                android:padding="3dp"
                                android:layout_width="@dimen/icon_size_30"
                                android:layout_height="@dimen/icon_size_30"
                                android:layout_gravity="center"
                                android:src="@drawable/baseline_sd_card_white_48"
                                android:tint="?attr/colorPrimary" />

                            <LinearLayout
                                android:layout_marginLeft="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="@string/local"
                                    android:textSize="@dimen/text_size_large" />
                                <LinearLayout
                                    android:layout_marginLeft="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/tvPhotos"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/photos"
                                        android:textColor="@color/colorButton"
                                        android:textSize="@dimen/text_size_normal" />

                                    <TextView
                                        android:id="@+id/tvVideos"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/videos"
                                        android:textColor="@color/colorButton"
                                        android:textSize="@dimen/text_size_normal" />

                                    <TextView
                                        android:id="@+id/tvAudios"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/audio"
                                        android:textColor="@color/colorButton"
                                        android:textSize="@dimen/text_size_normal" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/white">

                    <LinearLayout
                        android:id="@+id/llSettings"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="10dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:padding="2dp"
                            android:tint="?attr/colorPrimary"
                            android:id="@+id/imgSettings"
                            android:layout_width="@dimen/icon_size_30"
                            android:layout_height="@dimen/icon_size_30"
                            android:src="@drawable/baseline_settings_white_36" />

                        <TextView
                            android:textSize="@dimen/text_size_large"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="10dp"
                            android:gravity="center"
                            android:text="@string/settings" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>