<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.sharefiles.ShareFilesActivity">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/rlProgress"
            android:background="@drawable/bg_button_rounded_share"
            android:layout_margin="20dp"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="230dp">
            <ImageView
                android:id="@+id/imgChecked"
                android:src="@drawable/baseline_check_circle_white_48"
                android:layout_centerInParent="true"
                android:layout_width="@dimen/image_size_custom"
                android:layout_height="@dimen/image_size_custom" />
            <TextView
                android:layout_marginTop="25dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/tvTitle"
                android:textSize="@dimen/large"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:textColor="?attr/colorAccent"
                android:text="@string/imported_file_successful"
                android:layout_alignParentTop="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/btnGotIt"
                android:background="@drawable/bg_button_rounded_got_it"
                android:layout_margin="20dp"
                android:text="@string/got_it"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_normal"
                android:textAllCaps="false"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/button_high" />
        </RelativeLayout>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>