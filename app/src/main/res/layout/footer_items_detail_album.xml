<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/llBottom"
        android:background="@color/material_gray_800"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal"
        android:weightSum="4"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgShare"
                android:padding="7dp"
                android:src="@drawable/baseline_share_white_36"
                android:layout_gravity="center"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgExport"
                android:padding="7dp"
                android:src="@drawable/baseline_launch_white_36"
                android:layout_gravity="center"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size" />

        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgMove"
                android:padding="7dp"
                android:src="@drawable/baseline_input_white_36"
                android:layout_gravity="center"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llDelete"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgDelete"
                android:padding="7dp"
                android:src="@drawable/baseline_delete_sweep_white_36"
                android:layout_gravity="center"
                android:layout_width="@dimen/image_size"
                android:layout_height="@dimen/image_size" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>